<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://code.alibabatech.com/schema/dubbo http://code.alibabatech.com/schema/dubbo/dubbo.xsd">
    <!--1、指定当前服务的名字，同样的服务，名字项目，不要和其他的服务重复。-->
    <dubbo:application name="user-service-provider">
        <dubbo:parameter key="qos.enable" value="true" />
        <dubbo:parameter key="qos.accept.foreign.ip" value="false" />
        <dubbo:parameter key="qos.port" value="33333" />
    </dubbo:application>
    <!--2、指定注册中心-->
    <dubbo:registry address="zookeeper://192.168.25.216:2181"></dubbo:registry>
    <!--3、指定通信规则和通信端口，通信端口随意指定即可-->
    <dubbo:protocol name="dubbo" port="20880"></dubbo:protocol>
    <!--4、指定暴露的服务端口,这里暴露的接口的全限定名，ref 指向真正服务的对象-->
    <dubbo:service interface="com.nerl.gmall.service.UserService" ref="userServiceImpl"></dubbo:service>
    <bean id="userServiceImpl" class="com.nerl.gmall.service.UserServiceImpl"></bean>

    <!--5、配置监控中心的两种方式：-->
            <!--参考：http://dubbo.apache.org/zh-cn/docs/user/references/xml/dubbo-monitor.html-->
            <!--第一种方式：监控中心协议，如果为protocol="registry"，表示从注册中心发现监控中心地址-->
            <dubbo:monitor protocol="registry"></dubbo:monitor>
            <!--第二种方式：直连监控中心服务器地址，address="10.20.130.230:12080"-->
            <!--<dubbo:monitor address="192.168.25.216:7070"></dubbo:monitor>-->

</beans>
